<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/holo_orange_light">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_activity3_result"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_orange_light"
    tools:context="com.example.areum.quizassignmentareum.MainActivity3_result"
    tools:ignore="ScrollViewSize">

    <TextView
        android:text="RESULT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvResult"
        android:textStyle="normal|bold"
        tools:ignore="HardcodedText"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="36sp"
        android:fontFamily="sans-serif" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sadface"
        android:id="@+id/imageView"
        tools:ignore="ContentDescription"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tvResult"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/tvResultMessage"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="TRY AGAIN!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTry"
        android:textSize="14sp"
        tools:ignore="HardcodedText"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/tvResultMessage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="EXIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnExit"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/btnTry"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
</ScrollView>